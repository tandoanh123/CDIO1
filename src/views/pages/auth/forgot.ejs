<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#00696d" />
    <meta
      name="description"
      content="Nếu bạn quên mật khẩu, hãy yên tâm, GoTutor sẽ giúp bạn."
    />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link rel="shortcut icon" href="/imgs/favicon.svg" type="image/x-icon" />
    <link rel="stylesheet" href="/styles/pages/auth/forgot.css" />

    <style>
      @import url("/styles/base.css");
      @import url("/styles/partials/header-small-title.css");

      .content-container {
        width: 80%;
        max-width: 1152px;
        min-height: calc(100vh - 300px - 112px);
        margin: auto;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 24px;
      }

      .forgotPassword {
        width: 55%;
        box-shadow: 3px 3px 4px 2px rgba(0, 0, 0, 0.25);
        border-radius: 12px;
        box-sizing: border-box;
        padding: 48px 36px 36px;
        display: inherit;
        flex-direction: column;
        gap: 18px;
      }

      .row {
        margin: 0;
      }

      .forgotPassword__title {
        text-align: center;
        font-size: 2rem;
        font-weight: 600;
      }

      .forgotPassword__form {
        display: inherit;
        flex-direction: inherit;
        gap: 8px;
      }

      .forgotPassword__form input {
        padding: 11px 12px;
      }

      .forgotPassword__note {
        width: 100%;
        font-style: italic;
        font-size: 0.875rem;
        font-weight: 400;
        margin: 0;
        padding: 0;
      }

      .form-label {
        padding: 0;
        font-size: 1.25rem;
        font-weight: 500;
      }

      .form-text {
        margin-bottom: 12px;
        color: black;
      }

      .form__submit {
        padding: 10px 36px;
        background-color: #fe9c0b;
        color: white;
        font-size: 1rem;
        font-weight: 500;
        border-radius: 8px;
      }

      .form-control {
        border-radius: 8px;
      }

      .input_form {
        padding: 0;
        position: relative;
      }

      .form-control.is-invalid {
        background-image: none;
      }
    </style>
    <title>GoTutor</title>
  </head>

  <body>
    <%- include('../../partials/header-small-title', { title: "Quên mật khẩu",
    help: "Bạn cần sự trợ giúp?" }) %>

    <main class="content-container">
      <section class="forgotPassword">
        <h1 class="forgotPassword__title">Nhận liên kết đặt lại mật khẩu</h1>
        <form
          class="forgotPassword__form form"
          id="forgotPasswordPost"
          action="post"
        >
          <div class="row">
            <label for="form__email" class="form-label">
              Email
              <p class="form-text forgotPassword__note">
                Nhập email bạn đã đăng ký để nhận liên kết đặt lại mật khẩu.
              </p>
            </label>
            <input
              type="email"
              name="email"
              class="form-control form__email"
              id="form__email"
              placeholder="Nhập email"
            />
          </div>
          <div class="error-message" id="error-message"></div>

          <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <button type="submit" class="btn form__submit">Gửi</button>
          </div>
        </form>
      </section>
    </main>

    <%- include('../../partials/footer') %>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <script src="/scripts/partials/header-small-title.js"></script>
    <script src="/scripts/auth/forgot.js"></script>
  </body>
</html>
